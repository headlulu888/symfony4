{% endblock %}

{% block body %}

    <h1><b>Список страниц сайта!</b></h1>

    <p>Температура окружающего воздуха {{ temp }}</p>

    {% if temp == 31 %}
        Success!
    {% else %}
        Warning!
    {% endif %}

    {{ today|date("d-m-Y H:i:s") }}

    {% for page in pages %}
        <h3>{{ page.title }}</h3>
        <p>{{ page.content }}</p>
        <hr>
    {% endfor %}

    <a href="{{ path('main') }}">Link to main page</a><br>
    <a href="{{ path('showPage', {'id': 3}) }}">Show page</a>

    {% include('test/part.html.twig') %}

{% endblock %}